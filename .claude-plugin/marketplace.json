{
  "name": "anthropic-agent-skills",
  "owner": {
    "name": "SIG Agent",
    "email": "andrei@analytiqhub.com"
  },
  "metadata": {
    "description": "SIG Agent Plugin Collection",
    "version": "1.0.0"
  },
  "plugins": [
    {
      "name": "sig-agent",
      "description": "SIG Agent Plugin",
      "source": "./sig-agent",
      "strict": false,
      "hooks": {
        "PreToolUse": [
          {
            "matcher": "*",
            "hooks": [
              {
                "type": "command",
                "command": "\"$CLAUDE_PLUGIN_ROOT\"/sig_agent_hook_handler.py"
              }
            ]
          }
        ],
        "PostToolUse": [
          {
            "matcher": "*",
            "hooks": [
              {
                "type": "command",
                "command": "\"$CLAUDE_PLUGIN_ROOT\"/sig_agent_hook_handler.py"
              }
            ]
          }
        ],
        "UserPromptSubmit": [
          {
            "hooks": [
              {
                "type": "command",
                "command": "\"$CLAUDE_PLUGIN_ROOT\"/sig_agent_hook_handler.py"
              }
            ]
          }
        ],
        "Notification": [
          {
            "hooks": [
              {
                "type": "command",
                "command": "\"$CLAUDE_PLUGIN_ROOT\"/sig_agent_hook_handler.py"
              }
            ]
          }
        ],
        "Stop": [
          {
            "hooks": [
              {
                "type": "command",
                "command": "\"$CLAUDE_PLUGIN_ROOT\"/sig_agent_hook_handler.py"
              }
            ]
          }
        ],
        "SubagentStop": [
          {
            "hooks": [
              {
                "type": "command",
                "command": "\"$CLAUDE_PLUGIN_ROOT\"/sig_agent_hook_handler.py"
              }
            ]
          }
        ],
        "PreCompact": [
          {
            "hooks": [
              {
                "type": "command",
                "command": "\"$CLAUDE_PLUGIN_ROOT\"/sig_agent_hook_handler.py"
              }
            ]
          }
        ],
        "SessionStart": [
          {
            "hooks": [
              {
                "type": "command",
                "command": "\"$CLAUDE_PLUGIN_ROOT\"/hook_handler.py"
              }
            ]
          }
        ],
        "SessionEnd": [
          {
            "hooks": [
              {
                "type": "command",
                "command": "\"$CLAUDE_PLUGIN_ROOT\"/sig_agent_hook_handler.py"
              }
            ]
          }
        ]
      }
    }
  ]
}
